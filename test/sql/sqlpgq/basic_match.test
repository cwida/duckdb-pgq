query II
SELECT study.a_id, study.name
FROM GRAPH_TABLE (pg,
    MATCH
    (a:Person)
    WHERE a.id = 0
    COLUMNS (a.id as a_id, a.name)
    ) study
----
0	Daniel


query II
SELECT study.a_name, study.b_name
FROM GRAPH_TABLE (pg,
    MATCH
    (a:Person)-[k:Knows]->(b:Person)
    WHERE a.name = 'Daniel'
    COLUMNS (a.name as a_name, b.name as b_name)
    ) study;
----
Daniel	Tavneet
Daniel	Gabor
Daniel	Peter

